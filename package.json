{
  "private": true,
  "name": "messaging-apis",
  "license": "MIT",
  "repository": "github:sunray-eu/messaging-apis-new",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "tsc --build tsconfig.build.json",
    "build:clean": "tsc --build tsconfig.build.json --clean",
    "clean": "git clean -dfqX -- ./node_modules **/{dist,node_modules}/ ./packages/*/tsconfig*tsbuildinfo ./.yarn",
    "postinstall": "husky && lerna run prepare && yarn build",
    "lint": "eslint packages examples --ext=js,ts",
    "lint:fix": "yarn lint:fix:md && yarn lint --fix",
    "lint:fix:md": "prettier --write **/*.md",
    "lint:staged": "lint-staged",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "prepublishOnly": "yarn clean && yarn && yarn test",
    "publish": "lerna publish",
    "test": "yarn build && yarn lint && yarn testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage",
    "testonly:watch": "jest --watch",
    "typedoc": "typedoc --entryPointStrategy packages .",
    "watch": "tsc --build tsconfig.build.json --watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "axios": "^1.6.8",
    "axios-mock-adapter": "^1.22.0",
    "chalk": "^5.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-yoctol-base": "^0.24.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "micromatch": "^4.0.5",
    "mkdir": "^0.0.2",
    "msw": "^2.2.13",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typedoc": "^0.25.12",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=21.7.1"
  },
  "packageManager": "yarn@4.0.2"
}
